@{
   
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <!-- Bootstrap add ons CSS -->
    <link href="@Url.Content("~/Content/datepicker3.css")" rel="stylesheet">

    <!-- Icons-->
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet">

    <style>
        .add-top {
            margin-top:20px;
        }
    </style>

    <script src="@Url.Content("~/Scripts/jquery-1.11.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>

    <!-- Bootstrap add ons -->
    <script src="@Url.Content("~/Scripts/DatePicker/bootstrap-datepicker.js")"></script>

</head>

<body>

    <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index")">Faceted Search</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @if (ViewBag.NavId == null) { ViewContext.Writer.WriteLine("class='active'");}><a href="@Url.Action("Index")">Start</a></li>
                    <li @if (ViewBag.NavId == "afac") { ViewContext.Writer.WriteLine("class='active'"); }><a href="@Url.Action("SearchAdaptive")">Adaptive Facets</a></li>
                    <li @if (ViewBag.NavId == "cfac") { ViewContext.Writer.WriteLine("class='active'"); }><a href="@Url.Action("SearchCheckboxed")">Checkbox Facets</a></li>
                </ul>         
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">

       @RenderBody()

    </div> <!-- /container -->
    

   

</body>
</html>

